import java.util.*;
public class dado_Ramdon {

	public static void main(String[] args) {
		
		        Random rand = new Random();
		        int dado = rand.nextInt(6) + 1;

		        System.out.println("El dado ha sido lanzado y ha dado en el numero " + dado);

		        if (dado == 4) {
		            System.out.println("Felicidades has ganado el premio");
		        } else {
		            System.out.println("intentalo denuevo");
		        }
		    }
		}
