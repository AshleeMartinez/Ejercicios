package practicasYou;
import java.util.Scanner;

public class main_curso_you2 {

	public static void main(String[] args) {
		//Operaciones basicas en Java
		Scanner pantalla= new Scanner(System.in);
		float num1, num2, suma, resta, div, mult, residuo;
		
		System.out.println("Ingrese 2 números a realizar operaciones: ");
		num1= pantalla.nextFloat();
		num2= pantalla.nextFloat();
		
		suma= num1+num2;
		resta=num1-num2;
		div= num1/num2;
		mult= num1*num2;
		residuo= num1%num2;
		
		System.out.println("La suma es: "+ suma);
		System.out.println("La resta es: "+ resta);
		System.out.println("La division es: "+ div);
		System.out.println("La multiplicación es: "+ mult);
		System.out.println("El residuo es: "+ residuo);	
	}
}
